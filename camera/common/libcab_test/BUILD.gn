group("all") {
  deps = [
    ":libcab_test",
    ":libcam_algo",
  ]
}

pkg_config("target_defaults") {
  pkg_deps = [ "libcamera_common" ]
  configs = [ "//camera/build:cros_camera_common" ]
}

shared_library("libcam_algo") {
  sources = [
    "//camera/common/fake_libcam_algo.cc",
  ]
  configs += [ ":target_defaults" ]
}

executable("libcab_test") {
  sources = [
    "//camera/common/libcab_test_main.cc",
  ]
  configs += [
    ":target_defaults",
    "//common-mk:test",
  ]
  pkg_deps = [ "libcab" ]
  libs = [ "rt" ]
}
